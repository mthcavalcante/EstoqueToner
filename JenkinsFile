pipeline {
  agent any

  environment {
    DOCKER_HOST = "tcp://localhost:2375"
  }

  stages {
    stage('Clonar Reposit√≥rio') {
      steps {
        git url: 'https://github.com/mthcavalcante/EstoqueToner.git', branch: 'main'
      }
    }

    stage('Build da Imagem Docker') {
      steps {
        sh 'docker build -t geolab/estoque-toner:latest .'
      }
    }

    stage('Deploy') {
      steps {
        sh './jenkins/deploy.sh'
      }
    }
  }
}
